---
name: user_form
resource: User
resource_owner: anyone
redirect_to: "/dashboard/users"
flash_notice: "You've successfully edited user"
configuration:
  email:
    validation:
      presence: true
  first_name:
    validation:
      presence: true
  last_name:
    validation:
      presence: true
  profiles:
    dashboard:
      properties:
        admin:
          validation: {}
default_payload: ''
---
{% form html-novalidate: false %}
  {% include 'modules/utils/utils' %}
  {% include form_errors %}

  {% include input with f.first_name, type: "text" %}
  {% include input with f.last_name, type: "text" %}
  {% include input with f.email, type: 'email' %}

  {% include input with f.profiles.dashboard.properties.admin, type: 'checkbox' %}

  {% include submit_tag with "Save", class: "btn btn-primary btn-lg" %}

{% endform %}
