{% assign pagination_per_page = params.per_page | default: 10 %}
{% assign pagination_page = params.page | default: 1 %}
{% 
  query_graph "dashboard_get_users", result_name: "users",
  per_page: pagination_per_page,
  page: pagination_page
%}

<h2>Users List</h2>
<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>#</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Role</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {% for user in users.users.results %}
        <tr>
          <td>{{ user.id }}</td>
          <td>{{ user.first_name }}</td>
          <td>{{ user.last_name }}</td>
          <td>{{ user.email }} </td>
          <td>{% if user.dashboard.admin %}Administrator{% else %}User{% endif %}</td>
          <td><a href="/dashboard/users/edit/{{ user.id }}">Edit</a></td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
