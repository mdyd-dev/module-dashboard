<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../../../favicon.ico">

    <title>Dashboard Template for Bootstrap</title>

    <!-- Bootstrap core CSS -->
    <link href="{{ 'dashboard/dashboard/stylesheets/bootstrap.min.css' | asset_url }}" rel="stylesheet">
    <link href="{{ 'dashboard/dashboard/stylesheets/dashboard.css' | asset_url }}" rel="stylesheet">
{% comment %}Blog Styles  {% endcomment %}
    <link rel="stylesheet" media="screen" href="{{ 'dashboard-blog/blog/admin-vendor.css' | asset_url }}">
    <link rel="stylesheet" media="screen" href="https://fonts.googleapis.com/css?family=Open+Sans:400,600,700">

    {% yield 'head_content' %}
  </head>

  <body>
    {%- query_graph 'dashboard_current_user', result_name: dashboard_current_user -%}
    <nav class="navbar navbar-dark fixed-top bg-dark flex-md-nowrap p-0 shadow">
      <a class="navbar-brand col-sm-3 col-md-2 mr-0" href="/dashboard">Dashboard</a>
      {% comment %} <input class="form-control form-control-dark w-100" type="text" placeholder="Search" aria-label="Search"> {% endcomment %}
      <ul class="navbar-nav px-3">
        <li class="nav-item text-nowrap">
          <a class="nav-link" href="/log-out">{{dashboard_current_user.current_user.first_name }} - Sign out</a>
        </li>
      </ul>
    </nav>

    <div class="container-fluid">
      <div class="row">
        {% include 'modules/dashboard/public/views/partials/layout/sidebar' %}

        <main role="main" class="container col-md-9 ml-sm-auto col-lg-10 px-4">
          {{ content_for_layout }}
        </main>
      </div>
    </div>

    {% include 'modules/dashboard/public/views/layouts/dashboard/javascripts' %}
  </body>
</html>
